<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ms.dob.photocollage">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ms.dob.photocollage.activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.ms.dob.photocollage.activity.ShareActivity"
            android:exported="false" />
        <activity
            android:name="com.ms.dob.photocollage.activity.CreationListActivity"
            android:exported="false" />
        <activity
            android:name="com.ms.dob.photocollage.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"/>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name="com.ms.dob.photocollage.activity.MainActivity"
            android:exported="false" >

        </activity>
        <activity
            android:name="com.ms.dob.photocollage.activity.CollageActivity"
            android:label="@string/title_activity_process"
            android:theme="@style/AppTheme"
            android:exported="false"
            />
        <activity android:name="com.ms.dob.photocollage.activity.CollageLayoutSelectionActivity"
            android:exported="false"
            />
        <activity android:name="com.ms.dob.photocollage.photopicker.ui.PickActivity" />
    </application>

</manifest>